        <TextBlock x:Name="textblock1" HorizontalAlignment="Left" Margin="40,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="346" Width="381" OpacityMask="Black" Foreground="Black"/>

    </Grid>
</Window>
